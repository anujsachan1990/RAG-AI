{
  "manifest_version": 3,
  "name": "HESTA AI Assistant",
  "version": "1.0",
  "description": "AI-powered chat assistant for HESTA members",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://hesta.com.au/*", "*://*.hesta.com.au/*"],
  "icons": {
    "16": "icon-16.jpg",
    "32": "icon-32.jpg",
    "48": "icon-48.jpg",
    "128": "icon-128.jpg"
  },
  "content_scripts": [
    {
      "matches": ["*://hesta.com.au/*", "*://*.hesta.com.au/*"],
      "js": ["content-script.js"],
      "css": [],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon-16.jpg",
      "32": "icon-32.jpg",
      "48": "icon-48.jpg",
      "128": "icon-128.jpg"
    },
    "default_title": "HESTA AI Assistant"
  }
}
